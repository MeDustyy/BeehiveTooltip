{
  "schemaVersion": 1,
  "id": "beetooltip",
  "version": "${version}",
  "name": "BeeTooltip",
  "description": "A simple mod that displays the count of bees inside the Bee Hive and Bee Nest blocks in the tooltip.",
  "authors": [
    "spzla"
  ],
  "contact": {
    "repo": "https://github.com/spzla/BeeTooltip"
  },
  "license": "LGPL-3.0",
  "icon": "assets/beetooltip/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "me.spzla.beetooltip.BeeTooltipClient"
    ]
  },
  "mixins": [
    "beetooltip.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  }
}
